pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                sh 'echo step build'
            }
        }
        stage('test') {
            steps {
                sh 'whoami'
            }
        }
        stage('deploy') {
            steps {
                sh 'sudo docker run -d -p 80:80 ittaihurvitz/simple-container-ittai:1.0'
            }
        }
    }
}