pipeline {
    agent { docker { image 'ittaihurvitz/simple-container-ittai:1.0' } }
    stages {
        stage('build') {
            steps {
                sh 'echo step build'
            }
        }
        stage('test') {
            steps {
                sh 'sudo docker run -p 80:80 ittaihurvitz/simple-container-ittai:1.0'
            }
        }
        stage('deploy') {
            steps {
                sh 'echo step deploy'
            }
        }
    }
}